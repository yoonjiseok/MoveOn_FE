<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- 상단 제목 섹션 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- 뒤로가기 아이콘 -->
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_back_button"
            android:contentDescription="뒤로가기 버튼"
            android:layout_marginEnd="8dp" />

        <!-- 제목 -->
        <TextView
            android:id="@+id/record_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="12월 19일의 기록"
            android:textSize="22sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center"/>

        <!-- 저장 버튼 -->
        <TextView
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장"
            android:textSize="18sp"
            android:textColor="#4CAF50"
            android:gravity="end" />
    </LinearLayout>

    <!-- "오늘 채운 칸의 수"부터 지도 섹션까지 묶는 레이아웃 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="18dp"
        android:paddingEnd="18dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘 채운 칸의 수"
            android:textSize="16sp"
            android:textColor="#535252"
            android:layout_marginTop="30dp" />

        <!-- 칸의 수 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <!-- 숫자 -->
            <TextView
                android:id="@+id/today_count_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80"
                android:textColor="#000000"
                android:textSize="50sp"
                android:textStyle="bold" />

            <!-- 단위 -->
            <TextView
                android:id="@+id/today_count_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="칸"
                android:textSize="20sp"
                android:textColor="#535252"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- 통계 정보 섹션 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <!-- 첫 번째 줄: 달린 시간, 거리, 걸음 수 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- 달린 시간 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="달린 시간"
                        android:textSize="16sp"
                        android:textColor="#535252" />

                    <TextView
                        android:id="@+id/timeValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:12:23"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />
                </LinearLayout>

                <!-- 거리 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="거리"
                        android:textSize="16sp"
                        android:textColor="#535252" />

                    <TextView
                        android:id="@+id/distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50m"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />
                </LinearLayout>

                <!-- 걸음 수 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="걸음 수"
                        android:textSize="16sp"
                        android:textColor="#535252" />

                    <TextView
                        android:id="@+id/steps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10,000"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>

            <!-- 두 번째 줄: 평균 심박수, 칼로리 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <!-- 평균 심박수 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="평균 심박수"
                        android:textSize="16sp"
                        android:textColor="#535252" />

                    <TextView
                        android:id="@+id/heart_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="160"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />
                </LinearLayout>

                <!-- 칼로리 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="칼로리"
                        android:textSize="16sp"
                        android:textColor="#535252" />

                    <TextView
                        android:id="@+id/calories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3,050kcal"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />
                </LinearLayout>

                <!-- 빈칸 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <!-- 지도 섹션 -->
        <FrameLayout
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D4D6DD"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp" />

    <!-- 메모 섹션 -->
    <TextView
        android:id="@+id/memo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Memo"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/memo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:hint="Memo를 적어주세요."
        android:padding="8dp"
        android:background="@drawable/edittext_background"
        android:textSize="16sp"
        android:gravity="top|start" />
</LinearLayout>
