<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Circle with padding for symmetry -->
    <item android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="ring"
            android:innerRadius="100dp"
            android:thickness="60dp"
            android:useLevel="false">
            <solid android:color="#C4C4C4"/>
        </shape>
    </item>

    <!-- Progress Circle with matching padding -->
    <item android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="ring"
            android:innerRadius="100dp"
            android:thickness="60dp"
            android:useLevel="true">
            <solid android:color="#398342"/>
        </shape>
    </item>
</layer-list>